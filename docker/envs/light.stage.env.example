# Light - STAGE Environment
# Copiar para light.stage.env e preencher valores reais

# Database (RDS)
DATABASE_URL=postgres://user:password@rds-endpoint.xxx.rds.amazonaws.com:5432/light_stage

# Rails
SECRET_KEY_BASE=generate_with_rails_secret
RAILS_LOG_TO_STDOUT=true
RAILS_SERVE_STATIC_FILES=true

# Branding
BRANDING_APP_NAME=AVSI - Light Recicla (STAGE)
BRANDING_PRIMARY_COLOR=#008275
BRANDING_SECONDARY_COLOR=#4CAF50
BRANDING_ACCENT_COLOR=#A5D6A7
BRANDING_FOOTER_TEXT=Light Recicla STAGE 2025

# Business Policies
# DOACAO_RECICLAGEM_POLICY=disabled (Light nao usa)

# AWS SES (Email)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=us-east-1
# MAILER_SENDER=noreply@lightrecicla.com.br
