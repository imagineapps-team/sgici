# SGICI - Sistema de Gestao de Importacoes, Custos e Indicadores
# Copiar para .env e preencher valores reais
#
# cp .env.example .env

# ===========================================
# Database
# ===========================================
DATABASE_HOST=localhost
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=sua_senha_aqui
DATABASE_NAME=sgici

# Multi-tenant (false para SGICI)
MULTI_TENANT_ENABLED=false

# ===========================================
# Rails
# ===========================================
RAILS_ENV=development
RAILS_LOG_TO_STDOUT=true
RAILS_SERVE_STATIC_FILES=true
RAILS_MAX_THREADS=5
SECRET_KEY_BASE=gerar_com_rails_secret

# ===========================================
# Branding - SGICI
# ===========================================
BRANDING_APP_NAME=SGICI
BRANDING_LOGO_URL=/images/logo.png
BRANDING_LOGO_WHITE_URL=/images/logo-white.png
BRANDING_FAVICON_URL=/favicon.ico
BRANDING_PRIMARY_COLOR=#1E40AF
BRANDING_SECONDARY_COLOR=#059669
BRANDING_ACCENT_COLOR=#D97706
BRANDING_FOOTER_TEXT=SGICI - Gestao de Importacoes 2026
BRANDING_SUPPORT_EMAIL=suporte@empresa.com.br
BRANDING_SUPPORT_PHONE=

# ===========================================
# Action Mailer
# ===========================================
MAILER_SENDER=noreply@empresa.com.br

# AWS SES (producao)
# AWS_SES_KEY=
# AWS_SES_SECRET=
# AWS_SES_REGION=us-east-1
# AWS_SES_EMAIL_FROM=noreply@empresa.com.br

# ===========================================
# Active Storage
# ===========================================
# local (desenvolvimento) ou amazon (producao)
ACTIVE_STORAGE_SERVICE=local

# AWS S3 (producao)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=sa-east-1
# AWS_BUCKET=sgici-uploads

# ===========================================
# Redis (opcional)
# ===========================================
REDIS_URL=redis://localhost:6379/0

# ===========================================
# Misc
# ===========================================
TZ=America/Sao_Paulo
APP_HOST=localhost:3000
